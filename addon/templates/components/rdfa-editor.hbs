<div class="container-flex--contain editor-container">
	<div class="grid grid--collapse">
		{{document-structure node=editor.rootNode itemClicked=(action 'highlightStructureItem')}}
		<div class="col--9-12">
			<div class="container-flex--contain">
				<div class="grid grid--collapse">
					<div class="col--7-12">
						<div class="container-flex--scroll">
							<div class="editor">
                <div class="editor-commands">
                  {{wu-button label="+" size="large" onClick=(action 'triggerHints')}}
                </div>
								{{#content-editable
									class="editor__paper"
									textInsert=(action 'handleTextInsert')
									textRemove=(action 'handleTextRemove')
									handleFullContentUpdate=(action 'handleFullContentUpdate')
									selectionUpdate=(action 'handleSelectionChange')
									rawEditorInit=(action 'handleRawEditorInit')
									elementUpdate=(action 'handleElementUpdate')
									externalHandlers=handlers
									editable=true
									focused=true
									yieldHTML=true
								}}
								{{{value}}}
								{{/content-editable}}
								<div class="editor-hints">
                  {{#editor-suggested-hints suggestedHints=suggestedHints}}
                    <div class="annotation-suggestion__suggestion">
										  <div class="modal-dialog modal-dialog--small modal-dialog--static modal-dialog--hint">
                        <ul>
                          {{#each suggestedHints as |hint|}}
                            <li>{{component hint.component info=hint.info}}</li>
                          {{/each}}
                        </ul>
                      </div>
                    </div>
                  {{/editor-suggested-hints}}
                  {{#if hasActiveHints}}
                    <div class="annotation-suggestion__suggestion">
										  <div class="modal-dialog modal-dialog--small modal-dialog--static modal-dialog--hint">
											<ul>
												{{#each hintsRegistry.activeHints as |card|}}
												  <li>{{component card.card info=card.info}}</li>
												{{/each}}
											</ul>
 										  </div>
									  </div>
                  {{/if}}
									{{yield}}
								</div>
							</div>
						</div>
					</div>
					<div class="col--5-12">
						<div class="container-flex--scroll">
							<!-- moest ge niet moeten "scrollen", verander naar container-flex--contain -->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
