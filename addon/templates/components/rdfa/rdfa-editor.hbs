{{#if this.editor}}
  {{rdfa/editor-toolbar contentEditable=editor}}
{{/if}}
<div class="container-flex--contain editor-container">
  <div class="container-flex--scroll">
    <div class="grid grid--collapse grid--align-right">
      <div class="col--8-12">
        <div class="editor">
          {{#ce/content-editable
             class="editor__paper"
             textInsert=(or this.eventProcessor.insertText this.warnNotSetup)
             textRemove=(or this.eventProcessor.removeText this.warnNotSetup)
             handleFullContentUpdate=(or this.eventProcessor.analyseAndDispatch this.warnNotSetup)
             selectionUpdate=(action (or this.eventProcessor.selectionChanged this.warnNotSetup) editor.currentSelection)
             rawEditorInit=(action 'handleRawEditorInit')
             elementUpdate=(action (or this.domUpdate this.noop) editor.rootNode)
             externalHandlers=this.handlers
             editable=true
             focused=true
             yieldHTML=true
          }}
            {{{this.value}}}
          {{/ce/content-editable}}
        </div>
      </div>
      <div class="col--2-12">
        <div class="editor-commands">
          <div class="button-group">
            {{wu-button label="+" class="annotation-suggestion--trigger" isAlt=true onClick=(action 'triggerHints')}}
          </div>
        </div>
        <div class="editor-loading-events">
          {{rdfa/load-monitor editor=this.eventProcessor.editor}}
        </div>
        <div class="editor-hints">
          {{rdfa/editor-suggested-hints suggestedHints=this.suggestedHints}}
          {{#if this.hasActiveHints}}
            <div class="annotation-suggestion__suggestion">
              <div class="modal-dialog modal-dialog--sectioned modal-dialog--small modal-dialog--static modal-dialog--hint">
                <ul>
                  {{#each this.hintsRegistry.activeHints as |card|}}
                    <li>{{component card.card info=card.info}}</li>
                  {{/each}}
                </ul>
              </div>
            </div>
          {{/if}}
          {{yield}}
        </div>
      </div>
    </div>
  </div>
</div>
