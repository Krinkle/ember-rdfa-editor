<div class='say-toolbar'>
  <div class='say-toolbar__styling-tools'>
    <div class='say-toolbar__group'>
      <Rdfa::ToolbarIcon
        @title={{t 'ember-rdfa-editor.undo'}}
        @icon='undo'
        {{on 'click' this.undo}}
      />
      <Rdfa::ToolbarIcon
        @title={{t 'ember-rdfa-editor.redo'}}
        @icon='redo'
        {{on 'click' this.redo}}
      />
    </div>
    <div class='say-toolbar__group'>
      {{#if @showTextStyleButtons}}
        <Rdfa::ToolbarIcon
          @active={{this.isBold}}
          @title={{t 'ember-rdfa-editor.bold'}}
          @icon='bold'
          {{on 'click' this.toggleBold}}
        />
        <Rdfa::ToolbarIcon
          @active={{this.isItalic}}
          @title={{t 'ember-rdfa-editor.italic'}}
          @icon='italic'
          {{on 'click' this.toggleItalic}}
        />
        <Rdfa::ToolbarIcon
          @active={{this.isUnderline}}
          @title={{t 'ember-rdfa-editor.underline'}}
          @icon='underlined'
          {{on 'click' this.toggleUnderline}}
        />
        <Rdfa::ToolbarIcon
          @active={{this.isStrikethrough}}
          @title={{t 'ember-rdfa-editor.strikethrough'}}
          @icon='strikethrough'
          {{on 'click' this.toggleStrikethrough}}
        />
      {{/if}}
    </div>
    {{#if
      (and
        @showListButtons (or this.canInsertList this.canUnindent this.canIndent)
      )
    }}
      <div class='say-toolbar__group'>
        {{#if (and @showListButtons true)}}

          <Rdfa::ToolbarIcon
            @active={{this.ULButtonActive}}
            @title={{t 'ember-rdfa-editor.unordered-list'}}
            @icon='unordered-list'
            {{on 'click' this.toggleUnorderedList}}
          />
          {{#if @showOrderedListButton }}
            <Rdfa::ToolbarIcon
              @active={{this.isInOrderedList}}
              @title={{t 'ember-rdfa-editor.ordered-list'}}
              @icon="ordered-list"
              {{on "click" this.toggleOrderedList}}
            />
          {{/if}}
        {{/if}}
        {{#if @showIndentButtons}}
          {{#if this.canUnindent}}

            <Rdfa::ToolbarIcon
              @title={{t 'ember-rdfa-editor.unindent-list'}}
              @icon='reverse-indent'
              {{on 'click' this.insertUnindent}}
            />
          {{/if}}
          {{#if this.canIndent}}
            <Rdfa::ToolbarIcon
              @title={{t 'ember-rdfa-editor.indent-list'}}
              @icon='indent'
              {{on 'click' this.insertIndent}}
            />
          {{/if}}
        {{/if}}
      </div>
    {{/if}}
    {{yield to='middle'}}
  </div>

  <div class='say-toolbar__group'>
    <button type="button"
            style={{concat "background-color: " (if this.canWrapInUL "green" "red")}}
      {{on 'click' this.wrapInUL}}>wrapUL
    </button>
    <button type="button"
            style={{concat "background-color: " (if this.canWrapInOL "green" "red")}}
      {{on 'click' this.wrapInOL}}>wrapOL
    </button>
    <button type="button"
            style={{concat "background-color: " (if this.canWrapInOL "green" "red")}}
      {{on 'click' this.setOL}}>setOL
    </button>
    <span style={{concat "background-color: " (if this.canSink "green" "red")}}>sink</span>
    <span style={{concat "background-color: " (if this.canLift "green" "red")}}>lift</span>
  </div>
  <div class='say-toolbar__actions'>
    {{yield to='right'}}
  </div>
</div>