<div class='say-toolbar'>
  <div class='say-toolbar__styling-tools'>
    <div class='say-toolbar__group'>
      <Rdfa::ToolbarIcon
        @title={{t 'ember-rdfa-editor.undo'}}
        @icon='undo'
        {{on 'click' this.undo}}
      />
      <Rdfa::ToolbarIcon
        @title={{t 'ember-rdfa-editor.redo'}}
        @icon='redo'
        {{on 'click' this.redo}}
      />
    </div>
    <div class='say-toolbar__group'>
      {{#if @showTextStyleButtons}}
        <Rdfa::ToolbarIcon
          @active={{this.isBold}}
          @title={{t 'ember-rdfa-editor.bold'}}
          @icon='bold'
          {{on 'click' this.toggleBold}}
        />
        <Rdfa::ToolbarIcon
          @active={{this.isItalic}}
          @title={{t 'ember-rdfa-editor.italic'}}
          @icon='italic'
          {{on 'click' this.toggleItalic}}
        />
        <Rdfa::ToolbarIcon
          @active={{this.isUnderline}}
          @title={{t 'ember-rdfa-editor.underline'}}
          @icon='underlined'
          {{on 'click' this.toggleUnderline}}
        />
        <Rdfa::ToolbarIcon
          @active={{this.isStrikethrough}}
          @title={{t 'ember-rdfa-editor.strikethrough'}}
          @icon='strikethrough'
          {{on 'click' this.toggleStrikethrough}}
        />
      {{/if}}
    </div>
    {{#if
      (and
        @showListButtons (or this.canInsertList this.canUnindent this.canIndent)
      )
    }}
      <div class='say-toolbar__group'>
        {{#if (and @showListButtons this.canInsertList)}}

          <Rdfa::ToolbarIcon
            @active={{this.isInList}}
            @title={{t 'ember-rdfa-editor.unordered-list'}}
            @icon='unordered-list'
            {{on 'click' this.toggleUnorderedList}}
          />
          {{!--
  <button type="button" class="say-toolbar__button {{if this.isInList "is-active"}}"  {{on "click" this.toggleOrderedList}} data-test-button-id="ordered-list" title={{t 'ember-rdfa-editor.ordered-list'}}>
     <AuIcon @icon="ordered-list" @ariaHidden={{true}} @size="large" />
    <span class="au-u-hidden-visually">
      Ordered list
    </span>
  </button>
--}}
        {{/if}}
        {{#if @showIndentButtons}}
          {{#if this.canUnindent}}

            <Rdfa::ToolbarIcon
              @title={{t 'ember-rdfa-editor.unindent-list'}}
              @icon='reverse-indent'
              {{on 'click' this.insertUnindent}}
            />
          {{/if}}
          {{#if this.canIndent}}
            <Rdfa::ToolbarIcon
              @title={{t 'ember-rdfa-editor.indent-list'}}
              @icon='indent'
              {{on 'click' this.insertIndent}}
            />
          {{/if}}
        {{/if}}
      </div>
    {{/if}}
    {{yield to='middle'}}
  </div>
  <div class='say-toolbar__actions'>
    {{yield to='right'}}
  </div>
</div>