<AuContent @skin="tiny">
  <AuToolbar as |Group|>
    <Group>
      <AuHeading @level="5" @skin="5">Properties</AuHeading>
    </Group>
    <Group>
      <AuButton @icon="plus" @skin="naked">
        Add property
      </AuButton>
    </Group>
  </AuToolbar>
  <AuList @divider={{true}} as |Item|>
    {{#each-in @node.value.attrs.properties as |pred prop|}}
      <Item>
        {{#if (eq prop.type "attr")}}
          <div class="au-u-padding-tiny">
            <p><strong>{{pred}}</strong></p>
            <p>{{prop.object}}</p>
          </div>
        {{else}}
          <AuButton
            @icon="external-link"
            @skin="link"
            {{on "click" (fn this.goToNodeWithId prop.nodeId)}}
          >{{pred}}</AuButton>
        {{/if}}
      </Item>
    {{/each-in}}
  </AuList>

</AuContent>