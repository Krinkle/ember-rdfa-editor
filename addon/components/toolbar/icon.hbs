<button
  type='button'
  class='say-toolbar__button {{if @active "is-active"}} {{if @disabled "is-disabled"}}'
  title={{@title}}
  disabled={{@disabled}}
  ...attributes
>
  <AuIcon @icon={{@icon}} @ariaHidden={{true}} @size='large' />
  <span class='au-u-hidden-visually'>
    {{@title}}
  </span>
</button>