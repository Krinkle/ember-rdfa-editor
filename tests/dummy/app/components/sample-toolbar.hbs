<Toolbar>
  <:left as |Tb|>
    <Tb.Group>
      <Toolbar::History::Undo @controller={{@controller}}/>
      <Toolbar::History::Redo @controller={{@controller}}/>
    </Tb.Group>
    <Tb.Group>
      <Toolbar::Marks::Bold @controller={{@controller}}/>
      <Toolbar::Marks::Italic @controller={{@controller}}/>
      <Toolbar::Marks::Strikethrough @controller={{@controller}}/>
      <Toolbar::Marks::Underline @controller={{@controller}}/>
      <Toolbar::Marks::Subscript @controller={{@controller}}/>
      <Toolbar::Marks::Superscript @controller={{@controller}}/>
      <CodeMark::ToolbarButton @controller={{@controller}}/>
    </Tb.Group>
    <Tb.Group>
      <Toolbar::List::Unordered @controller={{@controller}}/>
      <Toolbar::List::Ordered @controller={{@controller}}/>
      <Toolbar::List::IndentationControls @controller={{@controller}}/>
    </Tb.Group>
    <Tb.Group>
      <Toolbar::TableMenu @controller={{@controller}}/>
    </Tb.Group>
    <Tb.Group>
      <Toolbar::HeadingMenu @controller={{@controller}}/>
    </Tb.Group>
  </:left>
  <:right>
    <Toolbar::RdfaBlocksToggle @controller={{@controller}}/>
  </:right>
</Toolbar>